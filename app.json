{
  "name": "umdfied",
  "description": "Turn any NPM package to its UMD build",
  "repository": "https://github.com/umdfied/umdfied",
  "keywords": ["umd", "browserify", "node", "cdn", "modules"],
  "website": "https://umdfied.github.io",
  "addons": ["heroku-postgresql:hobby-dev"],
  "buildpacks": [{ "url": "heroku/nodejs" }],
  "env": {
    "NODE_ENV": { "value": "production" }
  },
  "scripts": {
    "postdeploy": "NODE_ENV=development node ./sql/reset_db"
  }
}